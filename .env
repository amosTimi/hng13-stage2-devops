BLUE_IMAGE=yimikaade/wonderful:devops-stage-two
GREEN_IMAGE=yimikaade/wonderful:devops-stage-two

# Which pool is active by default: blue or green
ACTIVE_POOL=green

# Release ids given to each app (apps return these as X-Release-Id)
RELEASE_ID_BLUE=blue-v1
RELEASE_ID_GREEN=green-v1

# Host mapping ports (for Thanos)
NGINX_HOST_PORT=8080
BLUE_HOST_PORT=8081
GREEN_HOST_PORT=8082

# Internal service port the app listens on (inside container)
APP_INTERNAL_PORT=3000

# NGINX upstream timeouts / retries (tight to enable fast failover)
PROXY_CONNECT_TIMEOUT=1s
PROXY_SEND_TIMEOUT=5s
PROXY_READ_TIMEOUT=5s
PROXY_NEXT_UPSTREAM_TIMEOUT=6s
PROXY_NEXT_UPSTREAM_TRIES=2
UPSTREAM_MAX_FAILS=1
UPSTREAM_FAIL_TIMEOUT=5s
